<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <com.OkepLover.PokeRanch.Game.MainGameView
        android:id="@+id/main_game_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    />
     <include
        android:layout_gravity="right"
        layout="@layout/placebutton"
        android:id="@+id/place_game_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
     />
     
    <include
        android:layout_gravity="right"
        layout="@layout/specialbutton"
        android:id="@+id/special_game_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
     />

    <include
        android:layout_gravity="bottom"
        android:id="@+id/main_game_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/button" />

</FrameLayout>